<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>Show</td>
      <td>Edit</td>
      <td>Destroy</td>
    </tr>
    <% end %>
  </tbody>
</table>
<h2>New book</h2>
<%= form_with model: @book, url: index_c_path(@book.id) , method: :post do |b| %>
  <div class="input-field">
    <h4>Title</h4>
    <%= b.text_field :title %>
  </div>
  <div class="input-field">
    <h4>Body</h4>
    <%= b.text_area :body %>
  </div>
  <div class="create-action">
    <%= b.submit 'Create Book' %>
  </div>
<% end %>
